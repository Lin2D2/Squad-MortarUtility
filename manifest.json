{
    "manifest_version": 1,
    "type": "WebApp",
    "meta": {
        "name": "Squad Mortar Utility",
        "version": "1.0.0",
        "minimum-overwolf-version": "0.77.10",
        "author": "Linus Behrens",
        "icon": "icon.png",
        "icon_gray": "icon.png",
        "launcher_icon": "icon.png",
        "splash_image": "icon.png",
        "window_icon": "icon.png",
        "description": "Squad Mortar Utility"
    },
    "data": {
        "game_targeting": { "type": "dedicated", "game_ids": [213161] },
        "start_window": "InGame",
        "block_top_window_navigation": true,
        "popup_blocker": true,
        "mute": true,
        "windows": {
            "Background": {
                "file": "windows/background/index.html",
                "is_background_page": true
            },
            "InGame": {
                "file": "windows/inGame/index.html",
                "transparent": false,
                "resizable": false,
                "use_os_windowing": false,
                "in_game_only": true,
                "forcecapture": true,
                "ignore_keyboard_events": false,
                "restrict_to_game_bounds": true,
                "topmost": true,
                "keep_window_location": true,
                "grab_keyboard_focus": false,
                "start_position": {
                    "top": 50,
                    "left": 15
                },
                "size": {
                    "width": 240,
                    "height": 290
                }
            }
        },
        "override_on_update": true,
        "developer": {
            "enable_auto_refresh": true,
            "reload_delay": 1000,
            "filter": "*.*"
        }
    }
}